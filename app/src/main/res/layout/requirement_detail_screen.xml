                        android:layout_margin="10dp"
                        android:background="@color/add_more_color"
                        android:padding="5dp"
                        android:text="@string/show_more"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <LinearLayout
                        android:id="@+id/layout_seller_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorWhite"
                        android:orientation="vertical" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height" />
        </LinearLayout>
    </ScrollView>

    <com.tanzil.steelhub.customUi.MyButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_sign_up_green_bg"
        android:text="@string/submit"
        android:textColor="@color/menu_text_color"
        android:textSize="@dimen/large_text_size"
        customfontdemo:fontName="@string/raleway_medium" />
</RelativeLayout>
