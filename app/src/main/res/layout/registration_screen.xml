<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/back" />

        <com.tanzil.steelhub.customUi.MyTextView
            android:id="@+id/txt_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/complete_your_profile"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/large_text_size"
            customfontdemo:fontName="@string/raleway_medium" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_header"
        android:layout_marginBottom="@dimen/button_height"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/profile_layout_margin"
            android:background="@drawable/layout_grey_bg"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/user" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/password_w" />

                    <!--</LinearLayout>-->

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_text" />

                    <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@color/grey_text"-->
                    <!--android:orientation="horizontal">-->

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/password_w" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_company_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/company_name"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/company" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/mail" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/pin" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/pin" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_text" />

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/state"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/pin" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_zip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/zip"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/zip" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_text" />

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/contact"
                        android:inputType="textPassword"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/phone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_tin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/tin"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/wallet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_pan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/pan"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:padding="5dp"
                        android:src="@drawable/wallet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <com.tanzil.steelhub.customUi.MyEditText
                        android:id="@+id/et_requirement_dropdown"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/user"
                        android:drawableRight="@drawable/user"
                        android:gravity="start|center_vertical"
                        android:hint="@string/expected_req_monthly"
                        android:inputType="text"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/edit_text_size"
                        customfontdemo:fontName="@string/raleway_medium" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.tanzil.steelhub.customUi.MyButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_sign_up_green_bg"
        android:text="@string/submit"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_text_size"
        customfontdemo:fontName="@string/raleway_medium" />
</RelativeLayout>
