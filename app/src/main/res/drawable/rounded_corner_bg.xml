<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/bg_color"
                android:endColor="@color/bg_color"
                android:gradientRadius="360"
                android:startColor="@color/bg_color"
                android:type="sweep" />

            <stroke
                android:width="1dp"
                android:color="@color/bg_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>